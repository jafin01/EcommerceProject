<%- include('../layouts/head.ejs') %> 

<%- include('../partials/admin-navbar.ejs') %> 

<section class="h-100 h-custom" style="background-color: #ffff;">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12">
          <div class="card card-registration card-registration-2" style="border-radius: 15px; border: 1px solid black;">
            <div class="card-body p-0">
              <div class="row g-0">
                <div class="col-lg-8">
                  <div class="p-5">
                    <div class="d-flex justify-content-between align-items-center mb-5">
                      <h1 class="fw-bold mb-0 text-black">Categories</h1>
                      <h6 class="mb-0 text-muted"><%= categories.length %> Categories </h6>
                    </div>
                    <hr class="my-4">
  
                    

                   
                    
                    <div class="row mb-4 d-flex justify-content-between align-items-center">
                     
                      
                        <table id="example" class="table table-striped" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Slno</th>
                                    <th>Category</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>

                                <% categories.forEach((category, index) => { %> 
                                    <tr>
                                        <td><%= index + 1 %></td>
                                        <td><%= category.category %></td>
                                        <td>
                                            <div style="display: flex;">
                                            <!-- <form action="/admin-panel/category-management?id=<%=// index %>&edit=true" method="post" style="margin-right: 10px;"> -->
                                            <button style="border : none; background : none;" type="submit">
                                                <a href="/admin-panel/category-management?index=<%= index %>&edit=true" class="text-black"><i class="fa-solid fa-pen-to-square"></i></a>
                                            </form>
                                            <form action="/admin-panel/category-management/delete-category?id=<%= category._id %> " method="post">
                                            <button type="submit" style="border: none; background: none;"><i class="fa-solid fa-trash"></i></td></button>
                                            </form>
                                            </div>
                                    </tr>
                                <% }) %> 
                            </tbody>
                        </table>
                     
                     
                    </div>
  
                    <hr class="my-4">


                    

  
                    <!-- <div class="pt-5">
                      <h6 class="mb-0"><a href="/user_home" class="text-body"><i
                            class="fas fa-long-arrow-alt-left me-2"></i>Back to shop</a></h6>
                    </div> -->
                  </div>
                </div>
                <div class="col-lg-4 bg-grey">
                  <div class="p-5">
                    <h3 class="fw-bold mb-5 mt-2 pt-1">Add Category</h3>
                    <hr class="my-4">
  
                    
                    <% if(validation.categoryExists) { %> 
                        <p style="color: red;">Category Already Exists !!</p>
                    <% } %> 
                   
  
                    <h5 class="text-uppercase mb-3">Add new Category</h5>
                    
                    <div class="mb-3">
                            <div class="form-outline">
                                <% if(category.type) { %> 
                                <form action="/admin-panel/category-management/update-category?id=<%= category.id %> " method="post">
                                    <input name="category" value="<%= category.name %>" style="border: 1px solid black" type="text" id="form3Examplea2" class="form-control form-control-lg" required />
                                    <div class="form-outline mb-3" style="text-align: right">
                                        <button style="right: 0%" type="submit" class=" mt-3 btn btn-dark btn-block btn-lg"
                                        data-mdb-ripple-color="dark"><i class="fa fa-refresh" aria-hidden="true"></i> Update </button>
                                <% }else{ %> 
                                <form action="/admin-panel/category-management/add-new-category" method="post">
                                    <input name="category" style="border: 1px solid black" type="text" id="form3Examplea2" class="form-control form-control-lg" required />
                                    <div class="form-outline mb-3" style="text-align: right">
                                        <button style="right: 0%" type="submit" class=" mt-3 btn btn-dark btn-block btn-lg"
                                        data-mdb-ripple-color="dark"><i class='fa fa-plus'></i> Add </button>
                                <% } %> 
                            </div>
                           
                            </div>
                        </form>
                    </div>
  


                   
  
                    
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>


  <script>
    $(document).ready(function () {
    $('#example').DataTable({
        "pageLength": 5
    });
});
  </script>

<%- include('../layouts/foot.ejs') %> 