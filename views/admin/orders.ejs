<%- include('../layouts/head.ejs') %> 

<%- include('../partials/admin-navbar.ejs') %> 


<div class="container mt-5 table-responsive">
    <table
      id="myTable"
      class="table table-striped"
    >
      <thead>
        <tr>
          <th>Name</th>
          <th>Order ID</th>
          <th>Mobile</th>
          <th>Zip</th>
          <th>Total Bill</th>
          <th>Pay method</th>
          <th>Order Date</th>
          <th>Edit Status</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i=0; i < orders.length; i++) { %> 
            <tr>
            <td><%= orders[i].address.name %> </td>
            <td><%= orders[i]._id %> </td>
            <td><%= orders[i].address.mobile %> </td>
            <td><%= orders[i].address.zip %> </td>
            <td style="font-weight: 700;">â‚¹ <%= orders[i].bill %> </td>
            <td><%= orders[i].paymentMode %> </td>
            <td style="max-width: 200px"><%= orders[i].orderDate %> </td>
            <td><a href="/admin_panel/order_management/edit-order-status?id=<%= orders[i]._id %>"><button type="submit" class="btn btn-success">View Products</button></a></td>
            </tr>
        <% } %> 
      </tbody>
    </table>
  </div>

  
  <script>
    $(document).ready( function () {
    $('#myTable').DataTable();
} );
  </script>


