<%- include('../layouts/head.ejs') %> 

<%- include('../partials/user-navbar-loggedIn.ejs') %> 

<section class="h-100 h-custom" style="background-color: #fff;">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12">
          <div class="card card-registration card-registration-2" style="border-radius: 15px; border: 1px solid black;">
            <div class="card-body p-0">
              <div class="row g-0">
                <div class="col-lg-12">
                  <div class="p-5">
                    <div class="d-flex justify-content-between align-items-center mb-5">
                      <h1 class="fw-bold mb-0 text-black">Wishlist</h1>
                      <h6 class="mb-0 text-muted"><%= wishlist.length %> items </h6>
                    </div>
                    <hr class="my-4">
  

                    <% if(wishlist.length === 0) { %> 
                      <p>No items found</p>
                      <hr class="my-4">
                    <% } %> 


                    <% for(let i=0; i<wishlist.length; i++) { %> 

                    <div class="row mb-4 d-flex justify-content-between align-items-center">
                      <div class="col-md-2 col-lg-2 col-xl-2">
                        <a href="/user-home/product?id=<%= wishlist[i].itemId %>"><img
                          src="/images/<%= wishlist[i].image1 %> "
                          class="img-fluid rounded-3 mb-3" alt="Cotton T-shirt">
                        </a>
                      </div>
                      <div class="col-md-3 col-lg-3 col-xl-3">
                        <h6 class="text-muted"><%= wishlist[i].category %> </h6>
                        <h6 class="text-black mb-3"><%= wishlist[i].productName %> </h6>
                      </div>
                      <div class="col-md-3 col-lg-3 col-xl-2 d-flex mb-3">
                      </div>
                      <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                        <form action="/user_home/addToCart?id=<%= wishlist[i].itemId %>&wishlist=true" method="post">
                          <button type="submit" class="btn btn-dark">Add to Cart</button>
                        </form>
                      </div>
                      <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                        <form action="/add-to-wishlist?id=<%= wishlist[i].itemId %>&wishlist=true " method="post">
                        <button type="submit" class="text-muted" style="border: none; background: none;"><i class="fas fa-times"></i></button>
                      </form>
                      </div>
                    </div>
  
                    <hr class="my-4">
                    
                    <% } %> 
                    
  
                    <div class="pt-5">
                      <h6 class="mb-0"><a href="/user_home" class="text-body"><i
                            class="fas fa-long-arrow-alt-left me-2"></i>Back to shop</a></h6>
                    </div>
                  </div>
                </div>
     
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>


<%- include('../layouts/foot.ejs') %> 