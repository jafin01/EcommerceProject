<%- include('../layouts/head.ejs') %>

<%- include('../partials/user-navbar-loggedIn.ejs') %>

<!-- Header-->
<header class="bg-dark py-5"
    style="height: 70vw; margin: auto; background-image: url('https://burst.shopifycdn.com/photos/rockpile-in-forest.jpg?width=1850&format=pjpg&exif=1&iptc=1');">
    <div class="container px-4 px-lg-5" style="padding: 13%;">
        <div class="text-center text-white" style="text-align: center">
            <h1 class="display-4 fw-bolder" style="font-size: 10vw">MAKE TIME</h1>
            <h1 class=" mb-0" style="font-size: 2.6vw">FOR THE GREAT OUTDOORS.</h1>
        </div>
    </div>
</header>
<!-- Section-->
<section class="py-5">
    <div class="container mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">

            <% for(let i=0; i<products.length; i++) { %>
            <div class="col mb-5 col-sm-12 col-12">
                <div class="card h-100">
                    <form action="/add-to-wishlist?id=<%= products[i]._id %>" method="post">
                        <div class="badge  text-white position-absolute"
                            style="top: 0.5rem; right: 0.5rem; cursor: pointer;"><button type="submit"
                                style="background: none; border: none;"><i
                                    class="fa-solid fa-heart fa-xl wishlist-inactive"></i></button></div>
                    </form>

                    <!-- Product image-->
                    <a href="/user-home/product?id=<%= products[i]._id %> "><img class="card-img-top"
                            src="/images/<%= products[i].image1 %> " alt="..." /></a>
                    <!-- Product details-->
                    <div class="card-body p-4">
                        <div class="text-center">
                            <!-- Product name-->
                            <a href="/user-home/product?id=<%= products[i]._id %>  "
                                style="text-decoration: none; color :black">
                                <h5 class="fw-bolder"><%= products[i].productName %> </h5>
                            </a>
                            <!-- Product reviews-->
                            <div class="d-flex justify-content-center small text-warning mb-2">
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                            </div>
                            <!-- Product price-->
                            <span style=" margin-right: 10px; font-size: 20px; font-weight: 600;">₹
                                <%= products[i].discountedPrice %></span>
                            <span class="text-muted text-decoration-line-through" style="font-size: 16px;">₹
                                <%= products[i].actualPrice %> </span>
                        </div>
                        <div style="color: green; margin-top: 10px;">Free delivery</div>
                    </div>
                    <!-- Product actions-->
                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">

                        <form action="/user_home/addToCart?id=<%= products[i]._id %> " method="post">
                            <div class="text-center"><button type="submit" class="btn btn-outline-dark mt-auto mb-3"
                                    style="width: 100%;">Add to cart</button></div>
                        </form>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</section>
<!-- Footer-->
<footer class="py-5 bg-dark">
    <div class="container">
        <p class="m-0 text-center text-white">Copyright &copy; Camper 2022</p>
    </div>
</footer>

<!-- Bootstrap core JS-->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<!-- Core theme JS-->
<script src="js/scripts.js"></script>

<%- include('../layouts/foot.ejs') %>