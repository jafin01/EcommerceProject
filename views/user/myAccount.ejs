<%- include('../layouts/head.ejs') %>

<%- include('../partials/user-navbar-loggedIn.ejs') %>


<section class="h-100 h-custom" style="background-color: #fff;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12">
                <div class="card card-registration card-registration-2"
                    style="border-radius: 15px; border: 1px solid black;">
                    <div class="card-body p-0">
                        <div class="row g-0">
                            
                            
                            
                            <div class="col-lg-4 bg-grey container">
                                <div class="card mb-4" style="border: none;">
                                    <div class="card-body text-center mt-5">
                                        <img src="https://media-exp1.licdn.com/dms/image/C5603AQHa9bMbMR1hJQ/profile-displayphoto-shrink_800_800/0/1660235449106?e=1671667200&v=beta&t=vCTpe7kaicayL0FS0kyFSt8JTzqQ9j5bldmEObis5x8"
                                            alt="avatar" class="rounded-circle img-fluid" style="width: 150px;">
                                        <h5 class="my-3"><%= user.name %> </h5>
                                        <p class="text-muted mb-1"><%= user.email %> </p>
                                        <p class="text-muted mb-1"><%= user.mobile %> </p>
                                        <p class=""><a href="/myAccount?passEdit=true" style="text-decoration: none" class="text-success">Change Password</a></p>

                                        <div class="mt-4">
                                            <a href="/all-orders">
                                                <button class="btn btn-danger">
                                                    view All Orders
                                                </button>
                                            </a>
                                        </div>

                                        <div class="pt-5">
                                            <h6 class="mb-0"><a href="/user_home" class="text-body">Back to home</a></h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            
                            
                            
                            <div class="col-lg-8">
                                <div class="p-5">
                                    <div class="d-flex justify-content-between align-items-center mb-5">
                                        <h1 class="fw-bold mb-0 text-black"><i
                                                class="fa fa-cog fa-spin fa-1x fa-fw"></i>
                                            My Account</h1>
                                    </div>
                                    <hr class="my-4">


                                    <% if(index) { %>
                                        
                                        <div class="">
                                            <p class="card-text text-muted mt-4 mb-0  space">EDIT DELIVERY ADDRESS</p>
                                          </div>
                                          <div>
                                            <form class="row g-3 mt-0" action="/cart/checkout/shipping/edit-address?index=<%= +index %>"  method="post">
                                              <div class="col-md-6">
                                                <label for="" class="form-label">Name</label>
                                                <input type="text" value="<%= user.address[+index].name %>" class="form-control" id="name" name="name" required>
                                              </div>
                                              <div class="col-md-6">
                                                <label for="inputEmail4" class="form-label">Mobile number</label>
                                                <input type="tel" value="<%= user.address[+index].mobile %>" name="mobile" max="10" class="form-control" id="" required>
                                              </div>
                                              <div class="col-12">
                                                <label for="inputAddress" class="form-label">Address</label>
                                                <input type="text" value="<%= user.address[+index].address1 %>" class="form-control" name="address1" id="inputAddress"
                                                  placeholder="1234 Main St" required>
                                              </div>
                                              <div class="col-12">
                                                <label for="inputAddress2" class="form-label">Address 2</label>
                                                <input type="text" value="<%= user.address[+index].address2 %>" class="form-control" name="address2" id="inputAddress2"
                                                  placeholder="Apartment, studio, or floor" required>
                                              </div>
                                              <div class="col-md-6">
                                                <label for="inputCity" class="form-label">City</label>
                                                <input type="text" value="<%= user.address[+index].city %>" class="form-control" name="city" id="inputCity" required>
                                              </div>
                                              <div class="col-md-4">
                                                <label for="inputState" class="form-label">State</label>
                                                <select id="inputState" value="<%= user.address[index].state %>" name="state" class="form-select" required>
                                                  <option selected>Kerala</option>
                                                  <option>Kerala</option>
                                                </select>
                                              </div>
                                              <div class="col-md-2">
                                                <label for="inputZip" class="form-label">Zip</label>
                                                <input type="text" value="<%= user.address[index].zip %>" name="zip" class="form-control" id="inputZip" required>
                                              </div>
                                              
                                              <div class="col-12 text-center">
                                                <button type="submit" class="btn btn-lg btn-dark mb-2 mt-3"><i class="fa fa-refresh" aria-hidden="true"></i> Update</button>
                                              </div>
                                            </form>
                                          </div>
                                    <% }else if(add) { %> 
                                        <div class="">
                                            <p class="card-text text-muted mt-4 mb-0  space">ADD DELIVERY ADDRESS</p>
                                          </div>
                                          <div>
                                            <form class="row g-3 mt-0" action="/cart/checkout/shipping/add-new-address?profile=true"  method="post">
                                              <div class="col-md-6">
                                                <label for="" class="form-label">Name</label>
                                                <input type="text" value="" class="form-control" id="name" name="name" required>
                                              </div>
                                              <div class="col-md-6">
                                                <label for="inputEmail4" class="form-label">Mobile number</label>
                                                <input type="tel" value="" name="mobile" max="10" class="form-control" id="" required>
                                              </div>
                                              <div class="col-12">
                                                <label for="inputAddress" class="form-label">Address</label>
                                                <input type="text" value="" class="form-control" name="address1" id="inputAddress"
                                                  placeholder="1234 Main St" required>
                                              </div>
                                              <div class="col-12">
                                                <label for="inputAddress2" class="form-label">Address 2</label>
                                                <input type="text" value="" class="form-control" name="address2" id="inputAddress2"
                                                  placeholder="Apartment, studio, or floor" required>
                                              </div>
                                              <div class="col-md-6">
                                                <label for="inputCity" class="form-label">City</label>
                                                <input type="text" value="" class="form-control" name="city" id="inputCity" required>
                                              </div>
                                              <div class="col-md-4">
                                                <label for="inputState" class="form-label">State</label>
                                                <select id="inputState" value="" name="state" class="form-select" required>
                                                  <option selected>Kerala</option>
                                                  <option>Kerala</option>
                                                </select>
                                              </div>
                                              <div class="col-md-2">
                                                <label for="inputZip" class="form-label">Zip</label>
                                                <input type="text" value="" name="zip" class="form-control" id="inputZip" required>
                                              </div>
                                              
                                              <div class="col-12 text-center">
                                                <button type="submit" class="btn btn-lg btn-dark mb-2 mt-3">Save</button>
                                              </div>
                                            </form>
                                          </div>
                                    <% }else if(passEdit) { %>
                                      <h3 class="fw-bold mb-5 mt-2 pt-1 text-center">Change Password</h3>
                                      <div class="container col-12 col-md-9">
                                        <% if(validation.changeConfirmPassError) { %> 
                                        <p style="color: red;">Password and Confirm Password doesn't Match !!</p>
                                        <% }else if(validation.changeOldPassError) { %> 
                                        <p style="color: red;">Old Password is Incorrect !!</p>
                                        <% } %> 
                                        <form action="/myAccount/change-password" method="post" >
                                          <label class="form-label mt-0 mb-0" for="form3Examplea2">Enter Current Password</label>
                                          <input name="currPass" style="border: 1px solid black" type="password" id="form3Examplea2" class="form-control form-control-lg mt-0" required />
      
                                          <label class="form-label mt-2 mb-0" for="form3Examplea2">Enter New Password</label>
                                          <input name="newPass" style="border: 1px solid black" type="password" id="form3Examplea2" class="form-control form-control-lg mt-0" required />
      
                                          <label class="form-label mt-2 mb-0" for="form3Examplea2">Repeat Password</label>
                                          <input name="repeatPass" style="border: 1px solid black" type="password" id="form3Examplea2" class="form-control form-control-lg mt-0" required />
      
                                          <div class="form-outline " style="text-align: center">
                                              <button style="right: 0%" type="submit" class=" mt-3 btn btn-dark btn-block btn-lg"
                                              data-mdb-ripple-color="dark"><i class="fa fa-refresh" aria-hidden="true"></i> Update </button>
                                          </div>
                                        </form> 
                                  </div>
                                    <% }else{ %>  

                                        <% for(let i=0; i<user.address.length; i++) { %>
                                        <div class="form-check mt-3">
                                            <ul>
                                                <li>
                                                    <p class="display-address"><%= user.address[i].name %>,<span class="mx-3"><a href="/myAccount?edit=true&index=<%= i %>" style="text-decoration: none">Edit</a></span></p>
                                                    <p class="display-address"><%= user.address[i].address2 %>,</p>
                                                    <p class="display-address"><%= user.address[i].mobile %>,</p>
                                                    <p class="display-address"><%= user.address[i].address1 %>,</p>
                                                    <p class="display-address"><%= user.address[i].city %>,</p>
                                                    <p class="display-address"><%= user.address[i].state %>,</p>
                                                    <p class="display-address"><%= user.address[i].zip %> </p>
                                                </li>
                                            </ul>
                                            
                                            
                                            <label class="form-check-label" for="radio1"></label>

                                        </div>
                                        <% } %>

                                        <a href="/myAccount?add=true"
                                            style="text-decoration: none; color: green;">
                                            <p>Add a new address</p>
                                        </a>

                                        <% } %> 
                                    
                                </div>
                            </div>



                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>

<%- include('../layouts/foot.ejs') %>